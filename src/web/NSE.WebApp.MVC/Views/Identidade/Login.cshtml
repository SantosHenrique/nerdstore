@model NSE.WebApp.MVC.Models.UsuarioLogin

@{
    ViewData["Title"] = "Login";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-12">
        <section>
            <h1>Registre-se e comece a comprar hoje mesmo</h1>
            <hr />

            <vc:Summary></vc:Summary>

            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                <div class="form-group">
                    <label asp-for="Email">Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Senha">Senha</label>
                    <input type="password" asp-for="Senha" class="form-control" />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary">Salvar</button>
                </div>
                <div class="form-group">
                    <p>
                        <a asp-action="Registro" asp-controller="Identidade">Registrar</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>